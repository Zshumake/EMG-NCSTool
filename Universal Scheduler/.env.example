# Universal Medical Residency Scheduler - Environment Configuration

# Environment
ENVIRONMENT=development
DEBUG=true

# Database Configuration
DATABASE_URL=postgresql://scheduler_user:scheduler_pass@localhost:5432/medical_scheduler
# For development, you can use SQLite: sqlite:///./scheduler.db
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=false

# Redis Configuration  
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Authentication
SECRET_KEY=your-super-secret-key-at-least-32-characters-long-here
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth2 Providers (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_RELOAD=true

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8501

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Scheduling Configuration
MAX_SCHEDULING_ITERATIONS=10000
SCHEDULING_TIMEOUT_MINUTES=5
ENABLE_SOFT_RULES=true

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# File Upload Limits
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=.csv,.xlsx,.json

# Security
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=false

# Session Management
SESSION_EXPIRE_HOURS=24
MAX_CONCURRENT_SESSIONS=5

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30