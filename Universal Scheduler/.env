# Universal Medical Residency Scheduler Configuration

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
SQL_DEBUG=false

# Database Configuration  
DATABASE_URL=sqlite:///./medical_scheduler.db

# Security Settings (REQUIRED - Generate secure values for production)
SECRET_KEY=universal-medical-scheduler-dev-key-change-in-production-32-chars-min
ADMIN_PASSWORD=admin123

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# CORS Settings (adjust for your domain in production)
CORS_ORIGINS=["http://localhost:8501","http://localhost:3000","http://127.0.0.1:8501"]

# ACGME Compliance Settings
ACGME_COMPLIANCE_ENABLED=true
VIOLATION_AUTO_DETECTION=true
COMPLIANCE_REPORTING_ENABLED=true

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Redis Configuration (Optional - using in-memory for development)
REDIS_URL=redis://localhost:6379/0

# Feature Flags
ENABLE_METRICS=true
ENABLE_RATE_LIMITING=true
ENABLE_AUDIT_LOGGING=true

# UI Settings
STREAMLIT_THEME=light
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_TYPES=.csv,.xlsx,.json

# Scheduling Parameters
MAX_SCHEDULING_ITERATIONS=10000
SCHEDULING_TIMEOUT_MINUTES=5
ENABLE_SOFT_RULES=true